{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "allowJs": true
  },
  "include": ["packages/**/src"]
}
