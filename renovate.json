{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prConcurrentLimit": 25,
  "reviewers": ["YaroShkvorets", "0237h"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "recreateWhen": "never",
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "includePaths": [
    "package.json",
    "packages/**",
    "examples/**",
    "website/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "groupName": null
    },
    {
      "matchPackagePatterns": ["/typescript/", "/^@theguild//"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": null
    },
    {
      "matchPackagePatterns": ["*"],
      "excludePackagePatterns": ["/typescript/", "/^@theguild//"],
      "matchUpdateTypes": ["minor", "patch"],
      "extends": [":semanticCommitTypeAll(chore)"]
    },
    {
      "extends": [":group(minor)"],
      "matchFileNames": ["package.json", "packages/**"],
      "groupName": "packages non-major dependencies",
      "groupSlug": "packages-minor-patch"
    },
    {
      "extends": [":group(minor)"],
      "matchFileNames": ["examples/**"],
      "groupName": "examples dependencies",
      "groupSlug": "examples-minor-patch"
    },
    {
      "extends": [":group(minor)"],
      "matchFileNames": ["website/**"],
      "groupName": "website dependencies",
      "groupSlug": "website-minor-patch"
    }
  ]
}
