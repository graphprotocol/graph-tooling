{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 25,
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "recreateWhen": "never",
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "includePaths": [
    "package.json",
    "packages/**",
    "examples/**",
    "website/**"
  ],
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "enabled": false
    },
    {
      "matchFileNames": ["package.json", "packages/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "packages dependencies",
      "groupSlug": "packages-minor-patch"
    },
    {
      "matchFileNames": ["examples/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "examples dependencies",
      "groupSlug": "examples-minor-patch"
    },
    {
      "matchFileNames": ["website/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "website dependencies",
      "groupSlug": "website-minor-patch"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["typescript", "@theguild/**"],
      "groupName": null
    }
  ]
}
